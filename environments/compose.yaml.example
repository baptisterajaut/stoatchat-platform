domain: __DOMAIN__

apps:
  # api:
  #   webhooks: false  # disable if you have issues with webhooks
  voiceIngress:
    enabled: __VOICE_ENABLED__

livekit:
  enabled: __VOICE_ENABLED__
  rtcPortRangeStart: 50000
  rtcPortRangeEnd: 50100

# K8s-only infra — disabled for compose (Caddy handles TLS + reverse proxy)
ingress:
  enabled: false

certManager:
  enabled: false

reflector:
  enabled: false

# SMTP (disabled by default — no email verification)
smtp:
  host: ""
  port: 25
  username: ""
  password: ""
  fromAddress: "noreply@__DOMAIN__"
  replyTo: ""
  useTls: false
  useStarttls: false

# Generate with: openssl rand -hex 24
secretSeed: "__SECRET_SEED__"
